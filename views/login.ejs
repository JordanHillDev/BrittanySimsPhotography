<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>BRITTANY SIMS PHOTOGRAPHY</title>

        <!-- external CSS link -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poiret+One&family=Raleway:wght@200;400&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="css/normalize.css" />
        <link rel="stylesheet" href="css/reset.css" />
        <link rel="stylesheet" href="css/style.css" />
    </head>
    <body>
        <div id="mobileNav">
            <nav class="main-nav">
                <ul>
                    <li><a href="#">CONCERT</a></li>
                    <li><a href="#">LIFESTYLE</a></li>
                    <li><a href="#">REAL ESTATE</a></li>
                    <li><a href="#">ABOUT</a></li>
                    <li><a href="#">CONTACT</a></li>
                </ul>
            </nav>
        </div>
        <div id="mobileMenuLink">
            <a>MENU</a>
        </div>
        <div id="bodyWrapper">
            <div id="headerWrapper">
                <header id="header">
                    <div id="logo">
                        <h1><a href="/">BRITTANY SIMS</a></h1>
                    </div>
                    <div id="topNav">
                        <nav>
                            <ul>
                                <li id="workDropdownListItem">
                                    WORK
                                    <ul id="workDropdown" class="visibleMenu">
                                        <li><a href="#">CONCERT</a></li>
                                        <li><a href="#">LIFESTYLE</a></li>
                                        <li><a href="#">REAL ESTATE</a></li>
                                    </ul>
                                </li>
                                <li><a href="#">ABOUT</a></li>
                                <li><a href="#">CONTACT</a></li>
                            </ul>
                        </nav>
                    </div>
                </header>
            </div>

            <section id="loginModal">
                <h2>Sign In</h2>
                <div class="errorContainer">
                    <% if (locals.messages.errors) { %>
                        <% messages.errors.forEach( el => { %>
                            <div class="alert alert-danger"><%= el.msg %></div>
                        <% }) %>    
                    <% } %>
                    <% if (locals.messages.info) { %>
                        <% messages.info.forEach( el => { %>
                            <div class="alert alert-danger"><%= el.msg %></div>
                        <% }) %>    
                    <% } %>
                </div>
                <form action="/login/login" method="POST">
                    <input type="email" name="email" placeholder="Email">
                    <input type="password" name="password" placeholder="Password">
                    <span><a href="">Forgot your password?</a></span>
                    <input class="btn btn_secondary" type="submit">
                </form>
                <span>Don't have an account? <a href="/signup">Sign up</a></span>
            </section>

            <form action="/login/signup" method="POST">
                <input type="text" name="userName" placeholder="User Name">
                <input type="email" name="email" placeholder="Email">
                <input type="password" name="password" placeholder="Password">
                <input type="password" name="confirmPassword" placeholder="Confirm Password">
                <input id="btn_signUp" class="btn btn_secondary" type="submit">
            </form>
        </div> 
    <script src="js/main.js"></script>
</html>
